@model Music_Portal.Models.MusicFileShow
@{
    ViewData["Title"] = "DeleteMusicFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Удаление трека</h3>
<h5>Вы уверены, что хотите удалить трек?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicFileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicFileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicFileSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicFileSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicFilePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicFilePath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SingerName)
        </dt>
        <dd class="col-sm-10">          
            @Html.DisplayFor(model => model.SingerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StyleName)         
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StyleName)
        </dd>
        
    </dl>

    <form asp-action="DeleteMusicFile" method="post">
        <input type="hidden" asp-for="MusicFileId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="links">Вернуться на главную</a>
    </form>


